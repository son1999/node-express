<div class="container">
    <h1>{{title}}</h1>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <form class="form-group" enctype="multipart/form-data" action="/blogs/upload" method="post">
                <div class="form-group">
                    <input type="text" name="title" placeholder="Enter title..." class="form-control">
                </div>
                <div class="form-group">
                    <input type="file" class="custom-file" name="blogimage" multiple>
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
    </div>
</div>